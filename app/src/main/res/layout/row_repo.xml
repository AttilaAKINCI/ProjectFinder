<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.akinci.repolisting.features.repositoryViewer.repoListing.data.model.RepoRowModel"/>

        <variable
            name="clickListener"
            type="com.akinci.repolisting.commons.components.list.RecyclerViewClickListener" />

        <import type="android.view.View"/>
        <variable
            name="position"
            type="Integer"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> clickListener.onClick(position, data)}"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/card_view_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rowBg">

                <TextView
                    android:id="@+id/row_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="@{data.name}"
                    android:layout_toStartOf="@+id/fav_image"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fav_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toStartOf="@+id/arrow"
                    app:srcCompat="@drawable/ic_filled_star"
                    android:tintMode="src_in"
                    android:tint="@color/rowStarColor"
                    android:layout_centerVertical="true"
                    android:visibility="@{data.isFav ? View.VISIBLE : View.GONE}"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_arrow_right"
                    android:tintMode="src_in"
                    android:tint="@color/rowArrowColor"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>